<h1><%- title %></h1>
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
<section class="login-form">
  <form id="loginForm" class="loginForm" action="/account/login" method="post">
    <% if (locals.messages) { %>
    <ul>
      <% messages.forEach(message => { %>
      <li><%= message %></li>
      <% }) %>
    </ul>
    <% } %>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" name="account_email" id="email" required />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        name="account_password"
        id="password"
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        title="Password must be at least 12 characters long, contain at least one uppercase letter, one lowercase letter, one digit, and one special character."
        minlength="12"
        required
      />
    </div>
    <button type="submit">Login</button>
    <p>Don't have an account? <a href="/account/register">Register here</a></p>
  </form>
</section>
